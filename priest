useSelf_skill Heal {
  hp < 70%
  notWhileSitting 1
}

useSelf_skill Blessing {
  whenStatusInactive Blessing
  target_followTarget 1
  timeout 60
}

useSelf_skill Increase Agility {
  whenStatusInactive Increase Agility
  target_followTarget 1
  timeout 60
}

useSelf_skill Heal {
  target_followTarget 1
  hp < 60%
  timeout 5
}
